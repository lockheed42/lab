    function closeInfo() {
        userInfo.style.display = "none"
    }

    function userContent(b) {
        if (/@(.*)：/g.test(b)) {
            var a = /@(.*)：/g.exec(b);
            a = b.replace(a[0], '<span style="color:#00a1d6;cursor:pointer">' + a[0] + "</span>");
            return a
        } else {
            return b
        }
    }
    if (bbComment.clientWidth < 270) {
        $(".emoji-box").css("width", "270px");
        bbComment.addEventListener("DOMNodeInserted", function() {
            $("#bbComment .comment-send").not($("#bbComment .comment-send").eq(0)).css("transform", "translateX(-80px)").css("width", "270px")
        })
    };

