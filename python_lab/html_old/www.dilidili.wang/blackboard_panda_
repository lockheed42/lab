<script>
    var $dianji=$('.itm-img');
    var $omodal=$('.modal11');
    for(var j=0;j<$dianji.length;j++){
        $dianji.on('click',function () {
            $omodal.modal('show');
            $omodal.css('opacity','1');
            $('.modal-backdrop.fade').css('opacity','0.5');
        });
        $('.close').on('click',function () {
            $omodal.modal('hide');
        });
    }



    var itemImg=document.getElementsByClassName('itm-img');
    var fuckImg=document.getElementById('funckingImg');
    for(var i=0;i<itemImg.length;i++){
        itemImg[i].onclick=function () {

            var bigImg=this.getElementsByTagName('img')[0];
            fuckImg.innerHTML='<img id="imgId" src="'+this.getElementsByTagName('img')[0].getAttribute('src')+'"/>';
            var front=bigImg.getAttribute('src').substring(0,bigImg.getAttribute('src').length-4);
            var last=bigImg.getAttribute('src').substring(bigImg.getAttribute('src').length-4);
            fuckImg.innerHTML='<img id="imgId" src="'+front+1+last+'"/>';

        };
    }

        if(document.documentElement.clientWidth>1700) {
            $(window).scroll(function () {
                //console.log($(document).scrollTop());
                if($(document).scrollTop()>=490){
                    $('.float-div').addClass('scroll');
                    $('.body-top').addClass('scroll2');
                }else{
                    $('.float-div').removeClass('scroll');
                    $('.body-top').removeClass('scroll2');
                }
            })
        }


</script>
